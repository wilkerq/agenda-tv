rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para eventos: Permite a leitura da coleção (list) e de documentos individuais (get)
    // para qualquer usuário autenticado. A escrita continua protegida.
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regra geral para logs: qualquer usuário autenticado pode criar.
    match /audit_logs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Ninguém pode alterar ou ler logs individuais facilmente
    }

    // Regras para coleções de pessoal: Permite leitura e escrita para usuários autenticados.
    match /{personnelCollection}/{personnelId} where personnelCollection in ['transmission_operators', 'cinematographic_reporters', 'production_personnel'] {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
