
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // üîπ Fun√ß√µes auxiliares
    // ======================================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isEditor() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'editor');
    }


    // ======================================================
    // üîπ Cole√ß√£o de Usu√°rios (/users)
    // ======================================================
    match /users/{userId} {
      // O pr√≥prio usu√°rio pode ler e criar seu perfil. Admins tamb√©m podem ler qualquer perfil.
      allow read: if (request.auth.uid == userId) || isAdmin();
      allow create: if isAuthenticated();
      // Apenas admins podem atualizar ou deletar outros usu√°rios.
      allow update, delete: if isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√µes p√∫blicas seguras
    // ======================================================
    match /events/{eventId} {
      // Qualquer usu√°rio (inclusive n√£o autenticado) pode ler.
      allow read: if true;
      // Admins e Editores podem criar, atualizar ou excluir.
      allow write: if isEditor();
    }

    match /public_pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√µes internas de pessoal (acesso restrito)
    // ======================================================
    match /transmission_operators/{operatorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /cinematographic_reporters/{reporterId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /production_personnel/{personnelId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Regra padr√£o (catch-all)
    // ======================================================
    // Esta regra se aplica a qualquer cole√ß√£o n√£o explicitamente listada acima.
    // Garante seguran√ßa m√°xima bloqueando acesso de usu√°rios comuns.
    match /{collection}/{docId} {
      // Apenas administradores podem ler ou escrever.
      allow read, write: if isAdmin();
    }
  }
}
