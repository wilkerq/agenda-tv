rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // üîπ Fun√ß√µes auxiliares
    // ======================================================

    // Verifica se o usu√°rio est√° autenticado.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica se o usu√°rio est√° registrado como administrador.
    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Caso queira definir futuramente cole√ß√µes p√∫blicas gen√©ricas.
    function isPublicRead() {
      return true; // Pode personalizar depois.
    }


    // ======================================================
    // üîπ Logs de auditoria (/audit_logs)
    // ======================================================
    match /audit_logs/{logId} {
      // Protege contra leitura, edi√ß√£o e exclus√£o diretas.
      allow read, update, delete: if false;

      // Somente administradores autenticados podem criar logs.
      allow create: if isAuthenticated() && isAdmin();
    }


    // ======================================================
    // üîπ Administra√ß√£o de permiss√µes (/roles_admin)
    // ======================================================
    match /roles_admin/{userId} {
      // Apenas administradores podem listar ou adicionar novos administradores.
      allow read, create: if isAdmin();

      // Nenhum usu√°rio pode alterar ou remover administradores existentes.
      allow update, delete: if false;
    }


    // ======================================================
    // üîπ Cole√ß√µes p√∫blicas seguras
    // ======================================================
    match /events/{eventId} {
      // Qualquer usu√°rio (inclusive n√£o autenticado) pode ler.
      allow read: if true;

      // Somente administradores podem criar, atualizar ou excluir.
      allow write: if isAdmin();
    }

    match /public_pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√µes internas de pessoal (acesso restrito)
    // ======================================================
    match /transmission_operators/{operatorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /cinematographic_reporters/{reporterId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /production_personnel/{personnelId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Regra padr√£o (catch-all)
    // ======================================================
    // Esta regra se aplica a qualquer cole√ß√£o n√£o explicitamente listada acima.
    // Garante seguran√ßa m√°xima bloqueando acesso de usu√°rios comuns.
    match /{collection}/{docId} {
      // Apenas administradores podem ler ou escrever.
      allow read, write: if isAdmin();
    }
  }
}
