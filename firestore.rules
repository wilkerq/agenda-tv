rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // üîπ Fun√ß√µes auxiliares
    // ======================================================

    // Verifica se o usu√°rio est√° autenticado.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica se o usu√°rio tem a role 'admin' em seu documento na cole√ß√£o /users.
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }


    // ======================================================
    // üîπ Cole√ß√£o de Usu√°rios (/users)
    // ======================================================
    match /users/{userId} {
      // O pr√≥prio usu√°rio pode ler e atualizar seu perfil. Admins tamb√©m podem.
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Apenas admins podem criar ou deletar usu√°rios diretamente aqui (a cria√ß√£o principal √© no app).
      allow create, delete: if isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√µes p√∫blicas seguras
    // ======================================================
    match /events/{eventId} {
      // Qualquer usu√°rio (inclusive n√£o autenticado) pode ler.
      allow read: if true;

      // Somente administradores podem criar, atualizar ou excluir.
      allow write: if isAdmin();
    }

    match /public_pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√µes internas de pessoal (acesso restrito)
    // ======================================================
    match /transmission_operators/{operatorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /cinematographic_reporters/{reporterId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /production_personnel/{personnelId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Regra padr√£o (catch-all)
    // ======================================================
    // Esta regra se aplica a qualquer cole√ß√£o n√£o explicitamente listada acima.
    // Garante seguran√ßa m√°xima bloqueando acesso de usu√°rios comuns.
    match /{collection}/{docId} {
      // Apenas administradores podem ler ou escrever.
      allow read, write: if isAdmin();
    }
  }
}
