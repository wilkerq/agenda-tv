rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que usuários autenticados leiam e escrevam em suas próprias coleções
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite leitura e escrita para usuários autenticados nas coleções de dados principais
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }

    match /transmission_operators/{operatorId} {
      allow read, write: if request.auth != null;
    }

    match /cinematographic_reporters/{reporterId} {
      allow read, write: if request.auth != null;
    }
    
    match /production_personnel/{personnelId} {
        allow read, write: if request.auth != null;
    }

    // Permite que o sistema (e usuários autenticados) registrem logs, mas não os modifiquem
    match /audit_logs/{logId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false; 
    }
  }
}