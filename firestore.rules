rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra geral: Apenas usuários autenticados podem modificar dados.
    // A leitura é permitida para usuários autenticados para a maioria das coleções.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Coleção de eventos: leitura para autenticados, escrita para autenticados.
    match /events/{eventId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Coleções de pessoal: leitura para autenticados, escrita para autenticados.
    match /transmission_operators/{operatorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /cinematographic_reporters/{reporterId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /production_personnel/{personnelId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Coleção de logs de auditoria: apenas criação é permitida para autenticados.
    // Ninguém deve ser capaz de alterar ou excluir logs.
    match /audit_logs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; 
    }
  }
}
