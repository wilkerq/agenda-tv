rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Qualquer um pode ler (necessário para a página pública e dashboard)
      allow get: if true;
      
      // Apenas usuários autenticados podem criar, atualizar ou deletar
      allow create, update, delete: if request.auth != null;
    }
    
    match /events/{document=**} {
        // Permite que consultas (queries) na coleção 'events' sejam feitas por qualquer um
        allow list: if true;
    }
  }
}
