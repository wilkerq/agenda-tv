rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to read and write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow authenticated users to read/list events and perform writes
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }
     match /events/{path=**} {
      allow list: if request.auth != null;
    }

    // Allow authenticated users to list and read personnel for suggestions
    match /transmission_operators/{docId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /cinematographic_reporters/{docId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /production_personnel/{docId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to create and read audit logs
    match /audit_logs/{logId} {
      allow read, create: if request.auth != null;
    }
  }
}
