rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // üîπ Fun√ß√µes auxiliares
    // ======================================================

    // Verifica se o usu√°rio est√° autenticado.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica se o usu√°rio est√° registrado como administrador.
    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }


    // ======================================================
    // üîπ Cole√ß√£o de logs de auditoria (/audit_logs)
    // ======================================================
    match /audit_logs/{logId} {
      // Protege totalmente os logs: ningu√©m l√™, altera ou deleta.
      allow read, update, delete: if false;

      // Apenas administradores autenticados podem criar novos logs.
      allow create: if isAuthenticated() && isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√£o de administradores (/roles_admin)
    // ======================================================
    match /roles_admin/{userId} {
      // Apenas outros admins podem visualizar ou adicionar novos administradores.
      allow read, create: if isAdmin();

      // Ningu√©m pode alterar ou remover um administrador existente.
      allow update, delete: if false;
    }


    // ======================================================
    // üîπ Cole√ß√µes p√∫blicas seguras (exemplo: events, gallery, etc.)
    // ======================================================
    // Se voc√™ tiver cole√ß√µes que realmente podem ser lidas publicamente,
    // especifique-as explicitamente aqui:
    match /events/{eventId} {
      allow read: if true;            // P√∫blico pode ver eventos.
      allow write: if isAdmin();      // Apenas admin pode gerenciar.
    }

    match /public_pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ======================================================
    // üîπ Cole√ß√µes de Pessoal (restritas a administradores)
    // ======================================================
    match /transmission_operators/{operatorId} {
        allow read, write: if isAdmin();
    }
    
    match /cinematographic_reporters/{reporterId} {
        allow read, write: if isAdmin();
    }

    match /production_personnel/{personnelId} {
        allow read, write: if isAdmin();
    }

    // ======================================================
    // üîπ Regra padr√£o para outras cole√ß√µes (privadas)
    // ======================================================
    // Captura todas as cole√ß√µes n√£o definidas acima.
    match /{collection}/{docId} {
      // Apenas administradores podem ler ou escrever dados.
      // Isso evita exposi√ß√£o acidental de dados sens√≠veis.
      allow read, write: if isAdmin();
    }
  }
}
