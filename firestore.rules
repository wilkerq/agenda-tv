rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regra geral: Apenas usuários autenticados podem ler ou escrever.
    // As regras específicas para coleções abaixo sobrescrevem esta.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // As coleções de pessoal só podem ser modificadas por usuários autenticados.
    match /transmission_operators/{operatorId} {
      allow read, write: if request.auth != null;
    }
    match /cinematographic_reporters/{reporterId} {
      allow read, write: if request.auth != null;
    }
    match /reporters/{reporterId} {
      allow read, write: if request.auth != null;
    }
    match /producers/{producerId} {
      allow read, write: if request.auth != null;
    }

    // A coleção de eventos pode ser lida por qualquer pessoa, mas apenas
    // usuários autenticados podem criar, atualizar ou deletar eventos.
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
