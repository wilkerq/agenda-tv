rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Events collection
    match /events/{eventId} {
      allow read, create, update, delete: if isAuthenticated();
    }
    match /events/{wildcard=**} {
      allow list: if isAuthenticated();
    }

    // Personnel Collections
    match /transmission_operators/{operatorId} {
      allow read, create, update, delete: if isAuthenticated();
    }
     match /transmission_operators/{wildcard=**} {
      allow list: if isAuthenticated();
    }

    match /cinematographic_reporters/{reporterId} {
      allow read, create, update, delete: if isAuthenticated();
    }
    match /cinematographic_reporters/{wildcard=**} {
      allow list: if isAuthenticated();
    }

    match /production_personnel/{personnelId} {
        allow read, create, update, delete: if isAuthenticated();
    }
    match /production_personnel/{wildcard=**} {
      allow list: if isAuthenticated();
    }

    // Audit logs
    match /audit_logs/{logId} {
      allow read, create: if isAuthenticated();
    }
    match /audit_logs/{wildcard=**} {
        allow list: if isAuthenticated();
    }
  }
}
