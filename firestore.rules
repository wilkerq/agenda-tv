rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral para coleções que precisam de leitura pública para autenticados
    match /{collection}/{document=**} where collection in ['events', 'transmission_operators', 'cinematographic_reporters', 'production_personnel', 'audit_logs'] {
      allow read: if request.auth != null;
    }

    // Regra geral para escrita autenticada nas mesmas coleções
    match /{collection}/{document} where collection in ['events', 'transmission_operators', 'cinematographic_reporters', 'production_personnel', 'audit_logs'] {
      allow write: if request.auth != null;
    }
  }
}
