rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção de eventos
    match /events/{eventId} {
      // Qualquer pessoa pode ler (get) e listar (list) eventos.
      allow read: if true;

      // Apenas usuários autenticados podem criar, atualizar e deletar eventos.
      allow write: if request.auth != null;
    }

    // Regras para a coleção de operadores
    match /operators/{operatorId} {
      // Qualquer pessoa pode ler a lista de operadores (necessário para os formulários).
      allow read: if true;

      // Apenas usuários autenticados podem gerenciar os operadores.
      allow write: if request.auth != null;
    }
  }
}
