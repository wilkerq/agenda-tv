rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    match /events/{eventId} {
      allow read, write: if isAuthenticated();
    }
    match /events {
      allow list: if isAuthenticated();
    }

    match /transmission_operators/{opId} {
      allow read, write: if isAuthenticated();
    }
    match /transmission_operators {
      allow list: if isAuthenticated();
    }

    match /cinematographic_reporters/{repId} {
      allow read, write: if isAuthenticated();
    }
    match /cinematographic_reporters {
      allow list: if isAuthenticated();
    }

    match /production_personnel/{prodId} {
      allow read, write: if isAuthenticated();
    }
     match /production_personnel {
      allow list: if isAuthenticated();
    }

    match /audit_logs/{logId} {
      allow read, write: if isAuthenticated();
    }
     match /audit_logs {
      allow list: if isAuthenticated();
    }

    // A regra para roles_admin ainda precisa ser mais restritiva
    // para evitar que usu√°rios se tornem administradores.
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
