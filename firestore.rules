
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // üîπ Fun√ß√µes auxiliares
    // ======================================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserRole() {
      // Retorna a role do usu√°rio a partir do seu documento na cole√ß√£o /users
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isEditor() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'editor');
    }


    // ======================================================
    // üîπ Cole√ß√£o de Usu√°rios (/users)
    // ======================================================
    match /users/{userId} {
      // Leitura: O pr√≥prio usu√°rio pode ler seu perfil, e admins podem ler qualquer perfil.
      allow read: if (request.auth.uid == userId) || isAdmin();
      
      // Cria√ß√£o: Qualquer usu√°rio autenticado pode criar seu pr√≥prio documento de usu√°rio.
      // A role √© geralmente definida via backend ou na cria√ß√£o inicial da conta.
      allow create: if isAuthenticated();
      
      // Atualiza√ß√£o e Exclus√£o: Apenas administradores podem atualizar ou deletar documentos de usu√°rios.
      allow update, delete: if isAdmin();
    }
    
    // Regra para listar a cole√ß√£o de usu√°rios
    match /users {
        // Listar: Apenas administradores podem listar todos os usu√°rios.
        allow list: if isAdmin();
    }

    // ======================================================
    // üîπ Cole√ß√£o de Configura√ß√µes (/config)
    // ======================================================
    match /config/tv {
      // Leitura: Qualquer usu√°rio autenticado pode ler as configs.
      allow read: if isAuthenticated();
      // Escrita: Apenas Admins e Editores podem alterar as configs.
      allow write: if isEditor();
    }


    // ======================================================
    // üîπ Cole√ß√µes p√∫blicas seguras
    // ======================================================
    match /events/{eventId} {
      // Qualquer usu√°rio (inclusive n√£o autenticado) pode ler documentos individuais.
      allow get: if true;
      // Qualquer usu√°rio pode listar a cole√ß√£o de eventos.
      allow list: if true;
      // Admins e Editores podem criar, atualizar ou excluir.
      allow write: if isEditor();
    }

    match /public_pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Cole√ß√µes internas de pessoal (acesso restrito)
    // ======================================================
    match /transmission_operators/{operatorId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /cinematographic_reporters/{reporterId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /production_personnel/{personnelId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }


    // ======================================================
    // üîπ Regra padr√£o (catch-all)
    // ======================================================
    // Esta regra se aplica a qualquer cole√ß√£o n√£o explicitamente listada acima.
    // Garante seguran√ßa m√°xima bloqueando acesso de usu√°rios comuns.
    match /{path=**}/documents/{document} {
        allow read, write: if isAdmin();
    }
  }
}
