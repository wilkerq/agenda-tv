rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Regra de Leitura: Permite que qualquer pessoa (autenticada ou não) leia os eventos.
      // Essencial para a página pública.
      allow read;

      // Regra de Escrita: Permite que apenas usuários autenticados criem, atualizem ou excluam eventos.
      // Essencial para a segurança do painel de controle (dashboard).
      allow write: if request.auth != null;
    }
  }
}
