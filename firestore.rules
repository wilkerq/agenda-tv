
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow any authenticated user to read/write to the events collection.
    // This is the most direct way to solve the permission issue.
    match /events/{eventId} {
      allow read, write: if isAuthenticated();
    }

    // Regra global: Permite acesso total a qualquer usuário autenticado para outras coleções.
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
