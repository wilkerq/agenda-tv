
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa leia os dados dos eventos (necessário para a página pública).
    // A escrita, atualização e exclusão são negadas por padrão.
    match /events/{eventId} {
      allow read;
      
      // Permite que apenas usuários autenticados criem, atualizem ou excluam eventos.
      allow write: if request.auth != null;
    }
  }
}
