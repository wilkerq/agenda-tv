rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de eventos
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de operadores de transmissão
    match /transmission_operators/{operatorId} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de repórteres cinematográficos
    match /cinematographic_reporters/{reporterId} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de pessoal de produção
    match /production_personnel/{personnelId} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de logs de auditoria
    match /audit_logs/{logId} {
      allow read, write: if request.auth != null;
    }
  }
}
