rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção de eventos
    match /events/{eventId} {
      // Qualquer pessoa pode ler (get) um evento específico ou listar (list) a coleção.
      // Essencial para a página pública.
      allow get, list: if true;

      // Apenas usuários autenticados podem criar, atualizar ou deletar eventos.
      allow create, update, delete: if request.auth != null;
    }

    // Regras para a coleção de operadores
    match /operators/{operatorId} {
      // Qualquer pessoa pode ler os dados dos operadores (necessário para os formulários).
      allow get, list: if true;

      // Apenas usuários autenticados podem gerenciar os operadores.
      allow create, update, delete: if request.auth != null;
    }
  }
}
