rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Qualquer pessoa pode ler os eventos (para a página pública)
      allow read;
      // Apenas usuários autenticados podem criar, atualizar ou deletar eventos (para o dashboard)
      allow write: if request.auth != null;
    }
  }
}
