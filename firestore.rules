
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Qualquer pessoa pode ler a lista de eventos ou um evento específico.
      allow read: if true;
      // Apenas usuários autenticados podem criar, atualizar ou deletar eventos.
      allow write: if request.auth != null;
    }
  }
}
