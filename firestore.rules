rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra global para leitura: permite que qualquer pessoa leia qualquer documento.
    match /{document=**} {
      allow get, list: if true;
    }

    // Regras de escrita para coleções específicas (apenas para usuários autenticados)
    match /events/{eventId} {
      allow write: if request.auth != null;
    }

    match /transmission_operators/{operatorId} {
      allow write: if request.auth != null;
    }

    match /cinematographic_reporters/{reporterId} {
      allow write: if request.auth != null;
    }

    match /production_personnel/{personnelId} {
        allow write: if request.auth != null;
    }

    match /audit_logs/{logId} {
        // Apenas o sistema (via server-side logic) deve poder escrever nos logs.
        // O acesso do cliente é bloqueado.
        allow write: if false;
    }
  }
}
