rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado leia e escreva na coleção de eventos.
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }

    // Regras para as novas coleções de pessoal
    // Apenas usuários autenticados podem gerenciar (ler, criar, atualizar, deletar) pessoal.
    match /transmission_operators/{operatorId} {
      allow read, write: if request.auth != null;
    }
    match /cinematographic_reporters/{reporterId} {
      allow read, write: if request.auth != null;
    }
    match /reporters/{reporterId} {
      allow read, write: if request.auth != null;
    }
    match /producers/{producerId} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção antiga 'operators' (apenas para leitura/deleção durante a migração)
    match /operators/{operatorId} {
        allow read, delete: if request.auth != null;
        allow create, update: if false; // Impede novas escritas
    }
  }
}
