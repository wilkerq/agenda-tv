rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user has an admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Events can be read by anyone, but only created, updated, or deleted by admins.
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Personnel collections (operators, reporters, etc.) can be read by any authenticated user,
    // but only written to by admins. This allows the frontend to populate selection lists
    // while restricting management to admins.
    match /transmission_operators/{operatorId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /cinematographic_reporters/{reporterId} {
       allow read: if request.auth != null;
       allow write: if isAdmin();
    }
    
    match /production_personnel/{personnelId} {
       allow read: if request.auth != null;
       allow write: if isAdmin();
    }

    // Audit logs can only be read and created by admins. Deletion is disallowed.
    match /audit_logs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false;
    }
    
    // The admin roles collection can only be read or modified by other existing admins.
    // This prevents a user from making themselves an admin.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
