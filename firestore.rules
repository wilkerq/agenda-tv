rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // As regras para cada coleção específica vêm aqui.
    // Regra geral: Permite leitura para usuários autenticados e escrita restrita.

    // Coleção de eventos: todos os autenticados podem ler. Escrever/deletar requer autenticação.
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth != null;
    }

    // Coleções de pessoal: todos os autenticados podem ler. Escrever/deletar requer autenticação.
    match /transmission_operators/{operatorId} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth != null;
    }

    match /cinematographic_reporters/{reporterId} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth != null;
    }

    match /production_personnel/{personnelId} {
       allow read: if request.auth != null;
       allow write, delete: if request.auth != null;
    }
    
    // Coleção de logs de auditoria: qualquer usuário autenticado pode criar logs.
    // Leitura, atualização e exclusão são bloqueadas por segurança.
    match /audit_logs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Ninguém pode alterar os logs
    }
  }
}
