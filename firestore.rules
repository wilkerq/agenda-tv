rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção 'events'
    match /events/{document=**} {
      // Qualquer um pode listar os eventos (necessário para o calendário público)
      allow list: if true;
    }
    match /events/{eventId} {
      // Qualquer um pode ler um evento específico
      allow get: if true;
      // Apenas usuários autenticados podem criar, atualizar e deletar
      allow create, update, delete: if request.auth != null;
    }

    // Regras para a coleção 'operators'
    match /operators/{document=**} {
      // Qualquer um pode listar os operadores (necessário para os formulários)
      allow list: if true;
    }
    match /operators/{operatorId} {
       // Qualquer um pode ler um operador específico
      allow get: if true;
      // Apenas usuários autenticados podem criar, atualizar e deletar
      allow create, update, delete: if request.auth != null;
    }
  }
}
