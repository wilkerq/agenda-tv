rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra geral: Permite acesso de leitura e escrita a qualquer documento
    // em qualquer coleção se o usuário estiver autenticado.
    // Isso resolve os problemas de permissão para 'list' e 'get'.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
