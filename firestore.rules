rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa liste e leia eventos (necessário para a página pública)
    // Apenas usuários autenticados podem criar, editar ou apagar.
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Permite que qualquer pessoa liste e leia operadores (necessário para os formulários)
    // Apenas usuários autenticados podem criar, editar ou apagar.
    match /operators/{operatorId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}