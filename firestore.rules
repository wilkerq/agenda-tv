rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de eventos
    match /events/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de operadores de transmissão
    match /transmission_operators/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de repórteres cinematográficos
    match /cinematographic_reporters/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de pessoal de produção
    match /production_personnel/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Regra para a coleção de logs de auditoria
    match /audit_logs/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
